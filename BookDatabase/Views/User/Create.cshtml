@model UserModel

@{
    ViewData["Title"] = "Add User";
}

<div class="text-center">    
    <h1 class="display-4">Add User</h1>
</div>

<form asp-controller="User" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter name">
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        <label for="email" class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="username" class="form-label">Username</label>
        <input type="text" asp-for="Username" class="form-control" placeholder="Enter username">
        @Html.ValidationMessageFor(x => x.Username)
    </div>

    <div class="form-group">
        <label for="password" class="form-label">Password</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter password" required>
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-secondary" asp-controller="User" asp-action="Index">Back</a>
</form>


