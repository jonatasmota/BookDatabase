@model UserModel

@{
    ViewData["Title"] = "Delete User confirmation";
}

<div class="text-center">
    <h3>Do you really want to delete the user (@Model.Name)? </h3>

    <a class="btn btn-primary" role="button" asp-controller="Book" asp-action="Index">No</a>
    <a class="btn btn-danger" role="button" asp-route-id="@Model.Id" asp-controller="User" asp-action="Delete">Yes</a>
</div>



